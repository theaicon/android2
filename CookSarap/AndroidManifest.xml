<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="com.cookbook"
      android:versionCode="1"
      android:versionName="1.0">
    <uses-sdk android:minSdkVersion="8" />
    <application android:icon="@drawable/cs" android:label="CookSarap!">
        <activity android:name=".CookbookActivity"
                  android:label="CookSarap!">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".RecipeSelectionActivity">
            <intent-filter>
                <action android:name="android.intent.action.SEARCH"></action>
            </intent-filter>
            <meta-data android:name="android.app.searchable"
                android:resource="@xml/recipe_searchable"></meta-data>
        </activity>
        <activity android:name=".RecipeActivity"></activity>
        <activity android:name=".Options"></activity>
        <activity android:name=".FinishActivity"></activity>
        <activity android:name=".RecipeViewActivity"></activity>
        <activity android:name=".AboutUs"></activity>
        <activity android:name=".CookingTechniques"></activity>
        <activity android:name=".CookingUtilities"></activity>
        <activity android:name=".WeightsMeasurements"></activity>

    </application>
</manifest>